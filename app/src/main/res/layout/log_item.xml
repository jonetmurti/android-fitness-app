<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="30dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/trainingTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Type" />

    <TextView
        android:id="@+id/timeStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainingTypeText"
        android:layout_marginStart="21dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Time start:" />

    <TextView
        android:id="@+id/timeEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeStartText"
        android:layout_marginStart="21dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Time end:" />
</RelativeLayout>